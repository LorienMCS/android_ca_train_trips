<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.catraintrips.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="5 California Destinations by Train"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"
            android:padding="8dp"
            android:background="#9E9E9E"/>

        <ImageButton
            style="@style/ImgButtonStyle"
            android:src="@drawable/tahoe_1"/>

        <ImageButton
            style="@style/ImgButtonStyle"
            android:src="@drawable/la_1"/>

        <ImageButton
            style="@style/ImgButtonStyle"
            android:src="@drawable/yos_1"/>

        <ImageButton
            style="@style/ImgButtonStyle"
            android:src="@drawable/sb_1"/>

        <ImageButton
            style="@style/ImgButtonStyle"
            android:src="@drawable/sf_1"/>

    </LinearLayout>
</ScrollView>
